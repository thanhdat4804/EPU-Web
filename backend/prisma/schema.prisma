datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//User

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  // Quan hệ
  classes          Class[]        @relation("TeacherClasses") // nếu user là teacher
  messagesSent     Message[]      @relation("MessageSender")
  messagesReceived Message[]      @relation("MessageReceiver")
  submissions      Submission[]
  grades           Grade[]
  registrations    Registration[]
  attendances      AttendInfo[]
  payments         Payment[]
  notices          Notice[]
  reExams          ReExam[]
  complaints       Complaint[]
}

//Khóa học, tín chỉ

model Course {
  id     Int    @id @default(autoincrement())
  code   String @unique
  name   String
  credit Int

  classes       Class[]
  registrations Registration[]
}

//Lớp học

model Class {
  id       Int     @id @default(autoincrement())
  name     String
  semester String?
  year     Int?

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  teacherId Int?
  teacher   User? @relation("TeacherClasses", fields: [teacherId], references: [id])

  schedules   Schedule[]
  submissions Submission[]
  grades      Grade[]
  reExams     ReExam[]

  students Registration[] // Quan hệ tới Registration
}

//Lịch học

model Schedule {
  id        Int          @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  type      ScheduleType

  classId Int
  class   Class @relation(fields: [classId], references: [id])

  attendances AttendInfo[]
}

//Thông tin điểm danh

model AttendInfo {
  id     Int          @id @default(autoincrement())
  status AttendStatus
  note   String?

  scheduleId Int
  schedule   Schedule @relation(fields: [scheduleId], references: [id])

  studentId Int
  student   User @relation(fields: [studentId], references: [id])
}

//Bài nộp

model Submission {
  id          Int      @id @default(autoincrement())
  fileUrl     String
  submittedAt DateTime @default(now())
  grade       Float?

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])
}

//Điểm số

model Grade {
  id     Int     @id @default(autoincrement())
  score  Float
  letter String?

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])
}

//Thông tin đăng ký tín chỉ

model Registration {
  id           Int      @id @default(autoincrement())
  registeredAt DateTime @default(now())

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])
}

//Thông tin thanh toán

model Payment {
  id        Int           @id @default(autoincrement())
  amount    Float
  status    PaymentStatus
  createdAt DateTime      @default(now())

  studentId Int
  student   User @relation(fields: [studentId], references: [id])
}

//News, thông báo

model Notice {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())

  createdBy Int
  user      User @relation(fields: [createdBy], references: [id])
}

//Tin nhắn

model Message {
  id      Int      @id @default(autoincrement())
  content String
  sentAt  DateTime @default(now())

  senderId Int
  sender   User @relation("MessageSender", fields: [senderId], references: [id])

  receiverId Int
  receiver   User @relation("MessageReceiver", fields: [receiverId], references: [id])
}

//Phúc khảo

model ReExam {
  id        Int          @id @default(autoincrement())
  reason    String
  status    ReExamStatus @default(pending)
  createdAt DateTime     @default(now())

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])
}

//Tố cáo

model Complaint {
  id        Int             @id @default(autoincrement())
  title     String
  content   String
  status    ComplaintStatus @default(pending)
  createdAt DateTime        @default(now())

  studentId Int
  student   User @relation(fields: [studentId], references: [id])
}

enum Role {
  student
  teacher
  admin
}

enum ScheduleType {
  lecture
  exam
}

enum AttendStatus {
  present
  absent
  late
}

enum PaymentStatus {
  pending
  paid
  failed
}

enum ReExamStatus {
  pending
  approved
  rejected
}

enum ComplaintStatus {
  pending
  resolved
  rejected
}
