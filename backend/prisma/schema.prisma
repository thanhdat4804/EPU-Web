generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String
  email                String    @unique
  password             String
  wallet               String?   @unique
  privatekey  String?   // üîí l∆∞u private key ƒë√£ m√£ h√≥a
  role                 String    @default("User") // User | Admin | Seller
  items                Item[]
  auctions             Auction[] @relation("SellerAuctions")
  bids                 Bid[]
  createdAt            DateTime  @default(now())
}

model Category {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  items    Item[]  // 1 category c√≥ nhi·ªÅu items
}

model Item {
  id             Int       @id @default(autoincrement())
  name           String
  description    String?
  imageUrl       String?

  // üí∞ Gi√° kh·ªüi ƒëi·ªÉm (b·∫Øt bu·ªôc)
  startingPrice  Float

  // üéØ Gi√° s√†n (reserve price) - t√πy ch·ªçn
  reservePrice   Float?

  // üíé Gi√° ∆∞·ªõc t√≠nh (estimate) - t√πy ch·ªçn
  estimateMin    Float?
  estimateMax    Float?

  // üë§ Ch·ªß s·ªü h·ªØu
  owner          User      @relation(fields: [ownerId], references: [id])
  ownerId        Int

  // üîó Li√™n k·∫øt t·ªõi phi√™n ƒë·∫•u gi√°
  auction        Auction?

  status         String    @default("pending") // pending | approved | rejected

  // üîπ Th·ªÉ lo·∫°i
  category       Category? @relation(fields: [categoryId], references: [id])
  categoryId     Int?

  reviewResult   ReviewResult?

  createdAt      DateTime  @default(now())
}

model ReviewResult {
  id          Int      @id @default(autoincrement())
  item        Item     @relation(fields: [itemId], references: [id])
  itemId      Int      @unique   // ‚úÖ c·∫ßn th√™m @unique v√¨ 1 Item ch·ªâ c√≥ 1 ReviewResult
  status      String   @default("pending") // "approved", "rejected", "waiting_admin"
  confidence  Float?
  reasons     String?
  reviewedBy  String?  // 'AI' ho·∫∑c 'Admin'
  createdAt   DateTime @default(now())
}

model Auction {
  id              Int       @id @default(autoincrement())
  item            Item      @relation(fields: [itemId], references: [id])
  itemId          Int       @unique  // ‚úÖ m·ªói item ch·ªâ c√≥ 1 auction
  seller          User      @relation("SellerAuctions", fields: [sellerId], references: [id])
  sellerId        Int
  contractAddress String    @unique
  startTime       DateTime
  endTime         DateTime
  status          String    @default("Active") // Active | Ended | Cancelled
  bids            Bid[]
  transactions    Transaction[]
  createdAt       DateTime  @default(now())
}

model Bid {
  id         Int       @id @default(autoincrement())
  bidder     User      @relation(fields: [bidderId], references: [id])
  bidderId   Int
  auction    Auction   @relation(fields: [auctionId], references: [id])
  auctionId  Int
  amount     Float
  createdAt  DateTime  @default(now())
}

model Transaction {
  id          Int       @id @default(autoincrement())
  txHash      String
  fromAddress String
  toAddress   String
  amount      Float
  auction     Auction?  @relation(fields: [auctionId], references: [id])
  auctionId   Int?
  createdAt   DateTime  @default(now())
}
