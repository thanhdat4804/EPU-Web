generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String
  email                String    @unique
  password             String
  wallet               String?   @unique
  privatekey           String?
  role                 String    @default("User")
  items                Item[]
  auctions             Auction[] @relation("SellerAuctions")
  bids                 Bid[]
  createdAt            DateTime  @default(now())
  resetToken           String?
  resetTokenExpire     DateTime?
  wonAuctions          AuctionWinner[] @relation("UserWonAuctions") // ‚úÖ user th·∫Øng nhi·ªÅu auction
  transactions         Transaction[]
}

model Category {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  items    Item[]  // 1 category c√≥ nhi·ªÅu items
}

model Item {
  id             Int       @id @default(autoincrement())
  name           String
  description    String?
  imageUrl       String?

  // üí∞ Gi√° kh·ªüi ƒëi·ªÉm (b·∫Øt bu·ªôc)
  startingPrice  Float

  // üéØ Gi√° s√†n (reserve price) - t√πy ch·ªçn
  reservePrice   Float?

  // üíé Gi√° ∆∞·ªõc t√≠nh (estimate) - t√πy ch·ªçn
  estimateMin    Float?
  estimateMax    Float?

  // üë§ Ch·ªß s·ªü h·ªØu
  owner          User      @relation(fields: [ownerId], references: [id])
  ownerId        Int

  // üîó Li√™n k·∫øt t·ªõi phi√™n ƒë·∫•u gi√°
  auction        Auction?

  status         String    @default("pending") // pending | approved | rejected

  // üîπ Th·ªÉ lo·∫°i
  category       Category? @relation(fields: [categoryId], references: [id])
  categoryId     Int?

  reviewResult   ReviewResult?

  createdAt      DateTime  @default(now())
}

model ReviewResult {
  id          Int      @id @default(autoincrement())
  item        Item     @relation(fields: [itemId], references: [id])
  itemId      Int      @unique   // ‚úÖ c·∫ßn th√™m @unique v√¨ 1 Item ch·ªâ c√≥ 1 ReviewResult
  status      String   @default("pending") // "approved", "rejected", "waiting_admin"
  confidence  Float?
  reasons     String?
  reviewedBy  String?  // 'AI' ho·∫∑c 'Admin'
  createdAt   DateTime @default(now())
}

model Auction {
  id              Int       @id @default(autoincrement())
  item            Item      @relation(fields: [itemId], references: [id])
  itemId          Int       @unique
  seller          User      @relation("SellerAuctions", fields: [sellerId], references: [id])
  sellerId        Int
  contractAddress String    @unique
  startTime       DateTime
  endTime         DateTime
  status          String    @default("Active")
  bids            Bid[]
  transactions    Transaction[]
  winner          AuctionWinner? @relation("AuctionHasWinner") // ‚úÖ ƒë·∫∑t t√™n r√µ r√†ng
  createdAt       DateTime  @default(now())
}

model AuctionWinner {
  id           Int      @id @default(autoincrement())
  auction      Auction  @relation("AuctionHasWinner", fields: [auctionId], references: [id]) // ‚úÖ ƒë·ªëi x·ª©ng v·ªõi Auction
  auctionId    Int      @unique
  bidder       User     @relation("UserWonAuctions", fields: [bidderId], references: [id])  // ‚úÖ ƒë·ªëi x·ª©ng v·ªõi User
  bidderId     Int
  bidAmount    Decimal
  txHash       String?
  finalizedAt  DateTime @default(now())
}

model Bid {
  id         Int       @id @default(autoincrement())
  bidder     User      @relation(fields: [bidderId], references: [id])
  bidderId   Int
  txHash     String?
  auction    Auction   @relation(fields: [auctionId], references: [id])
  auctionId  Int
  amount     Float
  createdAt  DateTime  @default(now())
  status String? // "win" | "lose"
}

model Transaction {
  id           Int       @id @default(autoincrement())
  txHash       String?   @unique
  fromAddress  String?   // ‚úÖ c√≥ th·ªÉ null v√¨ khi recordPayment t·ª´ MetaMask b·∫°n kh√¥ng c·∫ßn truy·ªÅn
  toAddress    String?   // ‚úÖ t∆∞∆°ng t·ª±
  amount       Float?    // ‚úÖ c√≥ th·ªÉ kh√¥ng truy·ªÅn khi l√† payment record
  auctionId    Int?
  auction      Auction?  @relation(fields: [auctionId], references: [id])
  type         String    // ‚Äúbid‚Äù, ‚Äúpayment‚Äù, ...
  userId       Int?      // ‚úÖ ƒë·ªÉ tr√°nh l·ªói khi user ch∆∞a c√≥ (vd admin action)
  user         User?     @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
}

