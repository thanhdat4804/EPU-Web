generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String
  email                String    @unique
  password             String
  wallet               String?   @unique
  privatekey  String?   // ğŸ”’ lÆ°u private key Ä‘Ã£ mÃ£ hÃ³a
  role                 String    @default("User") // User | Admin | Seller
  items                Item[]
  auctions             Auction[] @relation("SellerAuctions")
  bids                 Bid[]
  createdAt            DateTime  @default(now())
  resetToken           String?      // MÃ£ reset máº­t kháº©u ngáº«u nhiÃªn
  resetTokenExpire     DateTime?    // Thá»i Ä‘iá»ƒm háº¿t háº¡n mÃ£ (VD: 15 phÃºt)
  transactions Transaction[]
}

model Category {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  items    Item[]  // 1 category cÃ³ nhiá»u items
}

model Item {
  id             Int       @id @default(autoincrement())
  name           String
  description    String?
  imageUrl       String?

  // ğŸ’° GiÃ¡ khá»Ÿi Ä‘iá»ƒm (báº¯t buá»™c)
  startingPrice  Float

  // ğŸ¯ GiÃ¡ sÃ n (reserve price) - tÃ¹y chá»n
  reservePrice   Float?

  // ğŸ’ GiÃ¡ Æ°á»›c tÃ­nh (estimate) - tÃ¹y chá»n
  estimateMin    Float?
  estimateMax    Float?

  // ğŸ‘¤ Chá»§ sá»Ÿ há»¯u
  owner          User      @relation(fields: [ownerId], references: [id])
  ownerId        Int

  // ğŸ”— LiÃªn káº¿t tá»›i phiÃªn Ä‘áº¥u giÃ¡
  auction        Auction?

  status         String    @default("pending") // pending | approved | rejected

  // ğŸ”¹ Thá»ƒ loáº¡i
  category       Category? @relation(fields: [categoryId], references: [id])
  categoryId     Int?

  reviewResult   ReviewResult?

  createdAt      DateTime  @default(now())
}

model ReviewResult {
  id          Int      @id @default(autoincrement())
  item        Item     @relation(fields: [itemId], references: [id])
  itemId      Int      @unique   // âœ… cáº§n thÃªm @unique vÃ¬ 1 Item chá»‰ cÃ³ 1 ReviewResult
  status      String   @default("pending") // "approved", "rejected", "waiting_admin"
  confidence  Float?
  reasons     String?
  reviewedBy  String?  // 'AI' hoáº·c 'Admin'
  createdAt   DateTime @default(now())
}

model Auction {
  id              Int       @id @default(autoincrement())
  item            Item      @relation(fields: [itemId], references: [id])
  itemId          Int       @unique  // âœ… má»—i item chá»‰ cÃ³ 1 auction
  seller          User      @relation("SellerAuctions", fields: [sellerId], references: [id])
  sellerId        Int
  contractAddress String    @unique
  startTime       DateTime
  endTime         DateTime
  status          String    @default("Active") // Active | Ended | Cancelled
  bids            Bid[]
  transactions    Transaction[]
  createdAt       DateTime  @default(now())
}

model Bid {
  id         Int       @id @default(autoincrement())
  bidder     User      @relation(fields: [bidderId], references: [id])
  bidderId   Int
  txHash     String?
  auction    Auction   @relation(fields: [auctionId], references: [id])
  auctionId  Int
  amount     Float
  createdAt  DateTime  @default(now())
  status String? // "win" | "lose"
}

model Transaction {
  id           Int       @id @default(autoincrement())
  txHash       String?   @unique
  fromAddress  String?   // âœ… cÃ³ thá»ƒ null vÃ¬ khi recordPayment tá»« MetaMask báº¡n khÃ´ng cáº§n truyá»n
  toAddress    String?   // âœ… tÆ°Æ¡ng tá»±
  amount       Float?    // âœ… cÃ³ thá»ƒ khÃ´ng truyá»n khi lÃ  payment record
  auctionId    Int?
  auction      Auction?  @relation(fields: [auctionId], references: [id])
  type         String    // â€œbidâ€, â€œpaymentâ€, ...
  userId       Int?      // âœ… Ä‘á»ƒ trÃ¡nh lá»—i khi user chÆ°a cÃ³ (vd admin action)
  user         User?     @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
}

